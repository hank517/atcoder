#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int n,a,b;
vector<int> h;
int main(){
  int temp,count =0;
  int flag = 1;
  cin >> n >> a >> b;
  for(int i = 0;i<n;i++){
    cin >> temp;
    h.push_back(temp);
  }

  do{
    count++;
    sort(h.begin(),h.end(),greater<int>());
    h[0]-=a;
    for(int i =1;i<n;i++){
      if(h[i]<=0)break;
      h[i]-=b;
    }
    if((h[0]<=0)&&h[1]<=0) flag = 0;
  }while (flag);
  
  cout << count  << endl;
}
